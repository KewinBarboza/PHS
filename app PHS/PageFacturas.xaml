            </StackPanel>
            <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}" BorderBrush="#f9aa33" x:Name="txtBuscarCodCliente"  materialDesign:HintAssist.Hint="Codigo Cliente" Margin="43,152,159,437" FontSize="15" KeyDown="txtBuscarCodCliente_KeyDown"/>
