            </StackPanel>
            <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"  BorderBrush="#f9aa33" x:Name="textBuscar" materialDesign:HintAssist.Hint="Codigo Factura"   Margin="43,87,159,504" FontSize="15" KeyDown="textBuscar_KeyDown"/>
